# Tesla Configuration
# Din Tesla account email (brukes for OAuth)
TESLA_EMAIL=din_email@example.com

# Hvor Tesla OAuth token skal lagres
TESLA_CACHE_FILE=data/tesla_cache.json

# Application Configuration
# Sett til 'true' for å bruke mock data (testing uten bil)
# Sett til 'false' for å bruke ekte Tesla API
MOCK_MODE=true

# Hvor ofte systemet skal oppdatere batteristatus (i minutter)
UPDATE_INTERVAL_MINUTES=60

# Batteriterskelen - lad ikke hvis over denne prosenten
CHARGE_THRESHOLD_PERCENT=80

# Database filsti
DATABASE_PATH=data/charging_manager.db

# Logging nivå (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Web Server Configuration
# Host - bruk 0.0.0.0 for å tillate tilgang fra andre enheter på nettverket
HOST=0.0.0.0

# Port - standard HTTP port
PORT=8000
